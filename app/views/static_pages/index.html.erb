<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mt-4">To Do List</h1>
      <form id="create-task" class="row justify-content-between">
        <input id="new-task-content" type="text" class="mb-2 p-2 col-8" placeholder="Write something here..." required>
        <button class="btn btn-primary btn-sm mb-2 p-2 col-3" id="create-task-btn" type="submit">Create Task</button>
      </form>
      <div class="row" id="tasks"></div>
      <div class="row-buttons d-flex justify-content-between">
        <button class="btn allTasks filterBtn border">All</button>
        <button class="btn activeTasks filterBtn border">Active</button>
        <button class="btn completeTasks filterBtn border">Completed</button>
      </div>
    </div>
  </div>
</div>